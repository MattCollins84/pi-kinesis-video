{
  "compilerOptions": {
    "outDir": "build/",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "typeRoots": [
        "typings",
        "node_modules/@types"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}